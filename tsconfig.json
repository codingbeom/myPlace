{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "target": "ES6",
    "lib": ["DOM", "ESNext"],
    "sourceMap": true,
    "module": "ESNext",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "esModuleInterop": true
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
